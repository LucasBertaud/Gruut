{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block css %}
	<link rel="stylesheet" href="{{asset('assets/css/profile.css')}}">
{% endblock %}

{% block content %}

	<header id="head" class="secondary" style="min-height: 80px; height:0px"></header>
	<style>
		.secondary {
			background: none !important;
		}

		.navbar-inverse {
			background-color: #038C17;
			opacity: 1;
		}

		.top-space {
			margin-top: 0px !important;
		}
	</style>
	<div class="row">
		<div class="col-md-3 text-center" style="background-color: #EDEDED; border-right: 2px solid #898989">
			<div class="left-profile-container">
				<img src="{{ asset("assets/images/profil_img.png") }}" alt="">
				<h1 class="profileName">{{user.firstname}}
					{{user.lastname}}</h1>
			</div>
			<h3 class="profileDiv">Compte</h3>
			<br>
			<div class="my-profile btn btn-block" style="background: white; border-radius:20px; width: 255px;height: 64px;">
				<i class="fa-regular fa-id-badge"></i>
				<a href="{{path("profile_index")}}">Votre profil</a>
			</div>
			<br>
			<div class="my-adress btn btn-block" style="background: white; border-radius:20px;  width: 255px;height: 64px;">
				<i class="fa-solid fa-box"></i>
				<a href="{{path("address_recap")}}">Vos adresses</a>
			</div>
			<br>
			<div class="my-data btn btn-block" style="background: white; border-radius:20px; margin-bottom:5vh;  width: 255px;height: 64px;">
				<i class="fa-solid fa-database"></i>
				<a href="{{path("profile_data", {"id" : id})}}">Vos données</a>
			</div>

			<h3 class="profileDiv">Achats</h3>
			<div class="my-order btn btn-block" style="background: white; border-radius:20px;  width: 255px;height: 64px;">
				<i class="fa-solid fa-basket-shopping"></i>
				<p>Commandes et suivis</p>
			</div>
			<div class="bill btn btn-block" style="background: white; border-radius:20px; margin-bottom:5vh;  width: 255px;height: 64px;">
				<i class="fa-solid fa-file-invoice"></i>
				<p>Factures</p>	
			</div>
			<div class="profileDiv">
				<div class="log-out btn btn-block" style="background: white; border-radius:20px; margin-bottom:5vh;  margin-top:3vh;  width: 255px;height: 64px;">
					<i class="fa-solid fa-power-off"></i>
					<a href="{{path("app_logout")}}">Se déconnecter</a>
				</div>
			</div>
		</div>

		<div class="col-md-9 text-center">
			<h1>Profil</h1>

			<hr>

			{% if user.gender == "Homme" %}
				<i class="fa-solid fa-mars"></i>
			{% else %}
				<i class="fa-solid fa-venus"></i>
			{% endif %}

			<p>Civilité :
				{{user.gender}}
				-
				<i class="fa-solid fa-envelope"></i>
				Email :

				{{user.email}}</p>
			<br>
			<p>Nom :
				{{user.lastname}}
				- Prénom :
				{{user.firstname}}</p>
			<hr>

			<i class="fa-solid fa-pencil"></i>
			<a href="{{path("profile_modify", {'id' : id})}}">Modifier le profil</a>


			<hr>

			<i class="fa-solid fa-lock"></i>
			<a href="{{path('profile_change_password', {'id' : id})}}">Modifier le mot de passe</a>


			<hr>

		</div>
	</div>
{% endblock %}
